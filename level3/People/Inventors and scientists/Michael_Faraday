<table class="infobox biography vcard" style="width:22em" about="#mwt4" typeof="mw:Transclusion" data-mw='{"parts":[{"template":{"target":{"wt":"Infobox scientist\n","href":"./Template:Infobox_scientist"},"params":{"name":{"wt":"Michael Faraday"},"image":{"wt":"M Faraday Th Phillips oil 1842.jpg"},"caption":{"wt":"Michael Faraday, 1842, by [[Thomas Phillips]]"},"birth_date":{"wt":"{{Birth date|df=yes|1791|9|22}}"},"birth_place":{"wt":"[[Newington Butts]], England"},"death_date":{"wt":"{{Death date and age|df=yes|1867|8|25|1791|9|22}}"},"death_place":{"wt":"[[Hampton Court]], Middlesex, England"},"residence":{"wt":"United Kingdom"},"nationality":{"wt":"[[British nationality|British]]"},"ethnicity":{"wt":""},"fields":{"wt":"[[Physics]]&lt;br>[[Chemistry]]"},"workplaces":{"wt":"[[Royal Institution]]"},"alma_mater":{"wt":""},"doctoral_advisor":{"wt":"&lt;!--he did not obtain a PhD-->"},"academic_advisors":{"wt":""},"doctoral_students":{"wt":""},"notable_students":{"wt":""},"known_for":{"wt":"[[Faraday&apos;s law of induction]]&lt;br>[[Electrochemistry]]&lt;br>[[Faraday effect]]&lt;br>[[Faraday cage]]&lt;br>[[Faraday constant]]&lt;br>[[Faraday cup]]&lt;br>[[Faraday&apos;s laws of electrolysis]]&lt;br>[[Faraday paradox]]&lt;br>[[Faraday rotator]]&lt;br>[[Faraday-efficiency effect]]&lt;br>[[Faraday wave]]&lt;br>[[Faraday Wheel|Faraday wheel]]&lt;br>[[Lines of force]]&lt;br>[[Balloon|Rubber Balloon]]"},"influences":{"wt":"[[Humphry Davy]]&lt;br>[[William Thomas Brande]]"},"influenced":{"wt":""},"awards":{"wt":"[[Royal Medal]] &lt;small>(1835 and 1846)&lt;/small>&lt;br>[[Copley Medal]] &lt;small>(1832 and 1838)&lt;/small>&lt;br>[[Rumford Medal]] &lt;small>(1846)&lt;/small>&lt;br>[[Albert Medal (Royal Society of Arts)|Albert Medal]] {{small|(1866)}}"},"signature":{"wt":"Michael Faraday signature.svg"},"footnotes":{"wt":""}},"i":0}}]}' id="mwCA"><tbody><tr><th colspan="2" style="text-align:center;font-size:125%;font-weight:bold"><div class="fn" style="display:inline">Michael F