        <msup id="mwA3I">
          <mi id="mwA3M">e</mi>
          <mrow class="MJX-TeXAtom-ORD" id="mwA3Q">
            <mo id="mwA3U">∫<!-- ∫ --></mo>
            <mrow class="MJX-TeXAtom-ORD" id="mwA3Y">
              <mfrac id="mwA3c">
                <mrow id="mwA3g">
                  <mi id="mwA3k">d</mi>
