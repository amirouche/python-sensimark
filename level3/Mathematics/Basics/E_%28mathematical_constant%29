            <mi mathvariant="normal">∞<!-- ∞ --></mi>
          </mrow>
        </munder>
        <mrow class="MJX-TeXAtom-ORD">
          <mfrac>
            <mi>n</mi>
            <mroot>
              <mrow>
                <mi>n</mi>
                <mo>!</mo>
              </mrow>
              <mrow class="MJX-TeXAtom-ORD">
                <mi>n</mi>
