<tr id="mwAoI">
<td id="mwAoM">1748</td><td align="right" id="mwAoQ">23</td><td id="mwAoU"><a rel="mw:WikiLink" href="./Leonhard_Euler" title="Leonhard Euler" id="mwAoY">Leonhard Euler</a><sup about="#mwt348" class="mw-ref" id="cite_ref-29" rel="dc:references" typeof="mw:Extension/ref" data-mw='{"name":"ref","attrs":{},"body":{"id":"mw-reference-text-cite_note-29"}}'><a href="./E_(mathematical_constant)#cite_note-29" style="counter-reset: mw-Ref 29;"><span class="mw-reflink-text">[29]</span></a></sup></td></tr>
<tr id="mwAoc">
<td id="mwAog">1853</td><td align="right" id="mwAok">137</td><td id="mwAoo"><a rel="mw:WikiLink" href="./William_Shanks" title="William Shanks" id="mwAos">William Shanks</a><sup about="#mwt351" class="mw-ref" id="cite_ref-30" rel="dc:references" typeof="mw:Extension/ref" data-mw='{"name":"ref","attrs":{},"body":{"id":"mw-reference-text-cite_note-30"}}'><a href="./E_(mathematical_constant)#cite_note-30" style="counter-reset: mw-Ref 30;"><span class="mw-reflink-text">[30]</span></a></sup></td></tr>
