        <mi>x</mi>
        <mo>=</mo>
        <mrow class="MJX-TeXAtom-ORD">
          <mfrac>
            <mrow>
              <msup>
                <mi>e</mi>
                <mrow class="MJX-TeXAtom-ORD">
                  <mi>i</mi>
                  <mi>x</mi>
                </mrow>
              </msup>
              <mo>−<!-- − --></mo>
              <msup>
