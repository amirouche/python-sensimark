        <mi>P</mi>
        <mspace width="thinmathspace"></mspace>
        <mi mathvariant="normal">Δ<!-- Δ --></mi>
        <mi>V</mi>
      </mstyle>
    </mrow>
    <annotation encoding="application/x-tex">{\displaystyle \Delta H=Q-P\,\Delta V+P\,\Delta V}</annotation>
  </semantics>
