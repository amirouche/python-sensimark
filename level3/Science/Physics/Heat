    </mrow>
    <annotation encoding="application/x-tex">{\displaystyle \delta Q=T\,\mathrm {d} S_{\mathrm {e} }\,\,\,\,\,{\text{and}}\,\,\,\,\,\mathrm {d} S_{\mathrm {i} }\equiv \mathrm {d} S_{\mathrm {uncompensated} }.}</annotation>
  </semantics>
