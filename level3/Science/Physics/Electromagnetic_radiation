            <mi>λ<!-- λ --></mi>
          </mfrac>
        </mrow>
        <mspace width="thinmathspace"></mspace>
        <mspace width="negativethinmathspace"></mspace>
      </mstyle>
    </mrow>
    <annotation encoding="application/x-tex">{\displaystyle E=hf={\frac {hc}{\lambda }}\,\!}</annotation>
  </semantics>
